    <bean name="elasticsearchClientFactory" class="com.statestr.arqe.factory.TransportElasticSearchFactory" init-method="initialize" destroy-method="destroy">
    	<constructor-arg name="settings" >
  			<map>
	            <entry key="cluster.name" value="${monitoring.es.clustername}" />
	            <entry key="client.transport.sniff" value="true" />
	        </map>
    	</constructor-arg>
        <constructor-arg name="clusterNodes" value="${monitoring.es.clusternodes}"/>
    </bean>
    
